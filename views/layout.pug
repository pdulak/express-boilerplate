html
  head
    title Boilerplate Page
    link(rel="stylesheet" href="/js/sortable/sortable.min.css")
    link(rel="stylesheet" href="/css/pico.css")
    link(rel="stylesheet" href="/css/style.css")
    link(rel="stylesheet" href="/css/variables.css")
  body
    header
      div(class="container")
        h3 Boilerplate Page 
        nav 
          ul 
            li 
              a(href="/" class="the-home") Home
