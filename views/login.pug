extends layout 

block content
  h1 Login Page
  if error
    p.error= error
  form(action="/login" method="post")
    label(for="email") Email:
    input(type="email" name="email" id="email")
    label(for="password") Password:
    input(type="password" name="password" id="password")
    input(type="submit" value="Login")